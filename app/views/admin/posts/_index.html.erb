<table class='table table-hover table-inverse'>
  <h2>コメント管理</h2>
    <tbody>
      <% posts.each do |post| %>
        <tr>
          <td><%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
            <td><%= link_to post.body,admin_post_path(post)%></td>
              <%#= render 'post_comments/counter', post: post %>
        </tr>
      <% end %>
    </tbody>
</table>