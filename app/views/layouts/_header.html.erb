<header role="banner">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Musica</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admin_users_path, class: "nav-link" do %>
              <i class="fas fa-users">会員一覧</i>
        <% end %>
          </li>
             <li class="nav-item">
              <%=  link_to admin_posts_path ,class: 'nav-link text-light' do %>
                <i class="fa-solid fa-icons"></i> タイムライン
              <% end %>
            </li>
          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt">ログアウト</i>
            <% end %>
          </li>
          <div class="text-center">
              <%= render "admin/searches/form" %>
          </div>
        <% elsif user_signed_in? %>
          <li>
            <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> My page
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_post_path(current_user), class: 'nav-link text-light' do %>
              <i class="fa-solid fa-user-pen"></i> 投稿
            <% end %>
          </li>
          <li>
            <%=  link_to users_path,class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> Users
            <% end %>
          </li>
          <li>
            <%=  link_to posts_path ,class: 'nav-link text-light' do %>
              <i class="fa-solid fa-icons"></i> タイムライン
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to favorites_path(user_id: current_user.id), class: 'nav-link text-light' do %>
              <i class="fa-solid fa-music"></i> Favorite Artist
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to liked_posts_user_path(current_user), class: 'nav-link text-light' do %>
              <i class="fa-regular fa-heart"></i> Likes
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to rooms_path, class: 'nav-link text-light' do %>
              <i class="fa-regular fa-envelope"></i> DM
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> Log out
            <% end %>
          </li>
          <div class="text-center">
            <%= render "public/searches/form" %>
          </div>
        <% else %>
          <li>
            <%= link_to root_path,class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i>
            <% end %>
          </li>
          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> Log in
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

