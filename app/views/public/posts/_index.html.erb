<!--タイムライン部分テンプ-->
<div class="card-list-container py-5">
  <% posts.each do |post| %>
<div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image, size: '50x50', class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-text"><%= post.body %></p>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "100x100" %>
        <% else %>
          <p></p>
        <% end %>
        </div>
        <span><i class="fas fa-user"></i> By <%= post.user.user_name %> ｜ </span>
      </div>
    </div>
    <% end %>
    </div>
