<!--タイムライン部分テンプ-->

      <div class='col-md-12', style='font-weight: bold; background:#9575DE;'>

          <% @posts.each do |post| %>
            <div class="row">
              <div class="card-body">
    <div class="col-8">
      <%= image_tag post.user.get_profile_image, size: '50x50', class: "mb-3 mr-3 rounded-circle" %>
      <i class="fas fa-user"></i> By <%= link_to post.user.user_name, user_path(post.user.id) %> ｜ <%= post.user.account_id %>
      <%= post.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="col-10">
      <p class="card-text"><%= link_to post.body, post_path(post.id) %></p>
      <% if post.post_image.attached? %>
        <%= image_tag post.get_image, size: '100x100' %>
      <% else %>
        <p></p>
      <% end %>
    </div>
    <td><%= render "public/likes/btn", post: post %></td>
    <td><i class="fa-regular fa-comment"></i><%= post.post_comments.count %></td>
  </div>


              <% if @post.user == current_user %>
                <%= link_to "削除", posts_path(@post), method: :delete %>
              <% end %>

            </div>
            <% end %>
        </div>

