<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col sticky-top', style='font-weight: bold;'>
      <br>
        <%= render 'public/users/sidebar', user: current_user %>
    </div>

<div class='col-md-8 offset-md-1'>
      <%#= render 'layouts/errors', obj: @post %> <!--バリデーションの記述を追加-->
      <h1>Editing Post</h1>

      <%= form_with model:@post,local:true do |f| %>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: 'form-control post_body' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>

      <%= link_to 'Show', @post %> |
      <%= link_to 'Back', posts_path, class: "back" %>
  </div>
</div>
</div>
</div>