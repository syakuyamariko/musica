    <div class='col-md-8 offset-md-1'>
          <%#= render 'layouts/errors', obj: @post %> <!--バリデーションの記述を追加-->
      <h1>Editing Post</h1>
        <%= form_with model:@post,local:true do |f| %>
          <div class="form-group">
            <%= f.label :opinion %>
            <%= f.text_area :body, class: 'form-control post_body' %>
          </div>
          <div class="form-group">
            <%= f.submit "Up date", class: 'btn btn-success' %>
          </div>
        <% end %>

        <%= link_to 'Back', @post %>
    </div>

