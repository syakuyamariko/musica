    <table class='table'>
      <tbody>
        <tr>
          <div class="col-12 mt-3">
            <%= image_tag post.user.get_profile_image, size: '50x50', class: "mb-3 mr-3 rounded-circle" %>
            <i class="fas fa-user"></i> By <%= link_to post.user.user_name, user_path(post.user.id) %> ｜ <%= post.user.account_id %>
            <%= post.created_at.strftime('%Y/%m/%d/%H:%M') %>
          </div>
          <td><%= post.body %></td>
          <td>
            <% if post.post_image.attached? %>
              <%= image_tag post.get_image, size: '100x100' %>
            <% else %>
              <p></p>
            <% end %>
          </td>
          <td>
            <% if post.video.attached? %>
              <video width="320" height="240" controls>
                <source src="<%= rails_blob_path(post.video, disposition: "attachment") %>" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            <% end %>
          </td>

          <td>コメント件数：<%= post.post_comments.count %></td>
          <% if  user_signed_in? %>
            <td><%= render 'public/likes/btn', post: post %></td>
          <% else %>
            <td>
              <i class="fas fa-heart" aria-hidden="true"></i>
              <%= post.likes.count %>
            </td>
          <% end %>

          <% if post.user == current_user %><!--もし、本の投稿をしたユーザーと現在ログインしているユーザーが一致していたら下記を表示-->
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-success float-right" %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger float-right", style: "margin-right: 10px;"%>
          <% end %>
          <% if  admin_signed_in? %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger float-right"%>
          <% end %>

        </tr>
      </tbody>
    </table>
