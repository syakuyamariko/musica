<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>新規投稿</h2>
    <%= form_with model:@post.new do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control body" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :post_image, class: "form-control-file post_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿" class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>