<% if @post.errors.any? %>
  <%= @post.errors.count %>件 エラーが発生しました。
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>新規投稿</h2>
        <%= form_with model: @post, url: '/posts', method: :post do |f| %>
          <div class="form-group">
            <%= f.text_area :body, class: "form-control body" %>
          </div>
          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :post_image, class: "form-control-file post_image", accept: 'image/*' %>
          </div>
          <div class="form-group">
              <p>動画（※動画はmp４の形式のみ投稿可能です。）</p><%= f.file_field :video %> <br>
          </div>
          <div class="form-group">
            <%= f.submit "投稿" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

