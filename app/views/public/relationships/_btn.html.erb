<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info btn-sm btn-block mt-3 btn-block", style: "background-color: #9E9FA5;" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success btn-sm btn-block mt-3 btn-block", style: "background-color: #22A39F;" %>
  <% end %>
<% end %>

