<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3', style='font-weight: bold; background:#6554AF;'>
      <h2>サイドバー</h2>
        <%= render 'public/users/sidebar', user: current_user %>
    </div>

    <div class='col-md-8 offset-md-1'>
          <h2>Followers</h2>
            <table class='table'>
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% if @users.exists? %>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
                        <td><%= user.user_name %></td>
                        <td><%= link_to 'Show', user %></td>
                      </tr>
                    <% end %>
                <% else %>
                  <p>ユーザーはいません</p>
                <% end %>
            </table>
      </div>
    </div>
  </div>