<div class='col-md-8 offset-md-1'>
  <h2>フォロワー一覧</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <% if @users.exists? %>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
              <td><%= user.user_name %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
    </table>
</div>
