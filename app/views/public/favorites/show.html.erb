<div class='col-md-8 offset-md-1'>
  <div class="mt-3 text-right"><% if @favorite.user == current_user %><!--もし、投稿をしたユーザーと現在ログインしているユーザーが一致していたら下記を表示-->
    <td><%= link_to 'Edit', edit_favorite_path(@favorite), class: "btn btn-sm btn-success", style: "background-color: #22A39F;" %></td>
      <td><%= link_to 'Destroy', @favorite, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger", style: "background-color: #EC625F;"%></td>
    <% end %>
  </div>
<h1>
  <%= link_to 'Favorite Artists', favorites_path(user_id: @user.id), style: "font-size: smaller; color: black;" %>
  &gt; <%= @favorite.artist %>
</h1>
  <div class="container">
    <div class="panel panel-default">
      <div class="col-12 text-start">
        <table class="table table-bordered custom-bg-color">
          <thead style="color: #434242; font-weight: bold; background:#F3EFE0;">
            <th>自分が選ぶおすすめアルバム３選</th>
          </thead>
          </div>

          <tbody>
            <tr><td>Best1:<%= @favorite.album_best1 %></td></tr>
            <tr><td>Best2:<%= @favorite.album_best2 %></td></tr>
            <tr><td>Best3:<%= @favorite.album_best3 %></td></tr>
          </tbody>
        </table>


        <table class="table table-bordered custom-bg-color">
          <thead style="color: #434242; font-weight: bold; background:#F3EFE0;">
            <th>好きな曲３選</th>
          </thead>
    </div>

          <tbody>
            <tr><td>Best1:<%= @favorite.song_best1 %></td></tr>
            <tr><td>Best2:<%= @favorite.song_best2 %></td></tr>
            <tr><td>Best3:<%= @favorite.song_best3 %></td></tr>
          </tbody>
        </table>

        <table class="table table-bordered custom-bg-color">
          <thead style="color: #434242; font-weight: bold; background:#F3EFE0;">
            <th>フリースペース</th>
          </thead>

          <tbody>
            <td><%= @favorite.free_record %></td>
          </tbody>
        </table>
  </div>
</div>
<!--いいね-->
<div id="good_btn_<%= @favorite.id %>"><!--非同期-->
  <%= render "public/likes/good_btn", favorite: @favorite %>
</div>
<style>
  .custom-bg-color {
    background-color: #F9F3F3;
  }
</style>
