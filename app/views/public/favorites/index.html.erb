
<div class='col-md-8 offset-md-1'>
  <h2 class="col-4 text-center">Favorite Artists</h2>
    <% if @user == current_user %>
    <%= link_to new_favorite_path, class: "btn btn--circle btn--circle-c btn--shadow text-right" do %>
      <i class="fas fa-plus"></i>
    <% end %>
    <% else %>
  <% end %>
</div>

          <div class='col-md-8 offset-md-1'>
            <% @favorites.each do |favorite| %>
            <table class = "table table-border-dark">
              <div class="card-body">
                <div class="row">
                  <div class="col-10">
                    <p class="card-text"><%= link_to favorite_path(favorite.id) do %>
                      <h2><%= favorite.artist %></h2>
                    <% end %>

                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          </table>
    </div>
  </div>
</div>


