<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class= 'col-md-3 sticky-top', style='font-weight: bold; background:#6554AF;'>
      <h2>サイドバー</h2>
      <%= render 'public/users/sidebar', user: current_user %>
    </div>


    <div class='col-md-8 offset-md-1'>
          <h3 class = "col-4 text-center">Favorite Artists</h3>
            <%= link_to new_favorite_path, class: "btn btn--circle btn--circle-c btn--shadow text-right" do %>
              <i class="fas fa-plus"></i>
            <% end %>

          <div class='col-md-8 offset-md-1'>
            <% @favorites.each do |favorite| %>
            <table class = "table table-border-dark">
              <div class="card-body">
                <div class="row">
                  <div class="col-10">
                    <p class="card-text"><%= link_to favorite_path(@favorite)do %>
                      <h2><%= favorite.artist %></h2>
                    <% end %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


