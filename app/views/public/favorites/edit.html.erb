<%#= render 'layouts/errors', obj: @book %> <!--バリデーションの記述を追加-->

  <div class='col-md-8 offset-md-1'>
    <h3>Favorite Artist編集画面</h3>

    <%= form_with model: @favorite, url: favorite_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :アーティスト名 %>
        <div class="form-row">
          <%= f.text_field :artist, autofocus: true, class: "form-control col-sm-4" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :おすすめアルバム３選！ %>
        <div class="row">
          <div class="col-sm-4 form-row">
            <%= f.label :"Best1", class: "col-3 col-form-label" %>
            <%= f.text_field :album_best1, autofocus: true, class: "form-control col-9" %>
          </div>
          <div class="col-sm-4 form-row">
            <%= f.label :"Best2", class: "col-3 col-form-label" %>
            <%= f.text_field :album_best2, autofocus: true, class: "form-control col-9" %>
          </div>
          <div class="col-sm-4 form-row">
            <%= f.label :"Best3", class: "col-3 col-form-label" %>
            <%= f.text_field :album_best3, autofocus: true, class: "form-control col-9" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :好きな曲３選！ %>
        <div class="row">
          <div class="col-sm-4 form-row">
            <%= f.label :"Best1", class: "col-3 col-form-label" %>
            <%= f.text_field :song_best1, autofocus: true, class: "form-control col-9" %>
          </div>
          <div class="col-sm-4 form-row">
            <%= f.label :"Best2", class: "col-3 col-form-label" %>
            <%= f.text_field :song_best2, autofocus: true, class: "form-control col-9" %>
          </div>
          <div class="col-sm-4 form-row">
            <%= f.label :"Best3", class: "col-3 col-form-label" %>
            <%= f.text_field :song_best3, autofocus: true, class: "form-control col-9" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :自由記入欄 %>
          <%= f.text_area :free_record, class: "form-control col" %>
      </div>

      <%= f.submit "保存", class: "btn btn-secondary", style: "background-color: #22A39F;" %>
    <% end %>



