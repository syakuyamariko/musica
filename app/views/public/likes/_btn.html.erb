<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post_id: post), class: "text-dark", remote:true, method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post_id: post), class: "text-dark",  remote:true, method: :post do %>
    <i class="fa-regular fa-heart" aria-hidden="true" style="color: Black;"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>
