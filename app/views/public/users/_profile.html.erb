<div class="offset-md-1 sticky-top" style="font-weight: bold; background:#F3EFE0;">
<div class="text-right">
  <% if user == current_user %>
    <%= link_to 'プロフィール編集', edit_user_path, class: 'btn btn-secondary mt-3' %>
  <% end %>
</div>

<div class="d-flex align-items-center">
  <%= image_tag user.get_profile_image, size: '150x150', class: "mt-3 rounded-circle mr-5" %>
    <div class="ml-30">
      <div class="user-details">
        <h3><%= user.user_name %></h3>
          <% if user.is_deleted %>
            <p>退会済み</p>
          <% else %>
          <% end %>
      </div>
      <p><%= user.account_id %></p>
      <p><%= user.introduction %></p>
      <p><%= link_to 'Favorite Artists', favorites_path(user_id: @user.id), style: "color: black;", class: "text-black" %></p>
      <p><%= @user.created_at.strftime('%Y/%m/%d') %></p>
    </div>
</div>


<table class="table">
  <tr>
    <th>フォロー</th>
    <th>
      <%= link_to user_followings_path(user) do %>
        <%= user.followings.count %>
      <% end %>
    </th>
    <th>フォロワー</th>
    <th>
      <%= link_to user_followers_path(user) do %>
        <%= user.followers.count %>
      <% end %>
    </th>
<!-- フォローボタン︎ -->
    <td><%= render "public/relationships/btn", user: user, options: { class: "follow-link" } %></td>
  </tr>
</table>
</div>

