
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>Edit Your Profile</h2>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :user_name, class: "form-control name", style: "background-color: #F7F5EB;" %>
      </div>
      <div class="form-group">
        <%= f.label :プロフィール画像 %>
          <div class="d-flex align-items-center">
            <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
            <%= image_tag @user.get_profile_image, size: '100x100', class: "mt-3 rounded-circle" %>
          </div>
          <div class="form-group">
            <%= f.label :自己紹介 %>
            <%= f.text_area :introduction, class: "form-control introduction", style: "background-color: #F7F5EB;" %>
          </div>
          <div class="form-group">
            <%= f.submit "保存する", class: "btn btn-primary" , style: "background-color: #22A39F;"%>
          </div>
    <% end %>
      </div>

  <%= link_to "退会する", users_confirm_withdraw_path(@user), class: "btn btn-secondary" %>
</div>
