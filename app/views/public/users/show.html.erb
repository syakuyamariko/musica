<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3', style='font-weight: bold; background:#6554AF;'>
      <h2>サイドバー</h2>
      <%= render 'public/users/sidebar', user: current_user %>
    </div>
<!--プロフィール欄-->
    <div class='col-md-8 offset-md-1', style='font-weight: bold; background:#E966A0;'>
      <div class="d-flex align-items-center">
        <%= image_tag @user.get_profile_image, size: '150x150', class: "mt-3 rounded-circle mr-3" %>
        <div class="ml-30"><%= link_to "プロフィール編集", edit_user_path, class: "btn btn-secondary" %>
          <h3><%= @user.user_name %></h3>
          <p><%= @user.account_id %></p>
          <p><%= @user.introduction %></p>
          <p><%= @user.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      </div>
      </div>


      <!-- ユーザーの投稿一覧 -->

    </div>
