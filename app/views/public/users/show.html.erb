<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 sticky-top', style='font-weight: bold; background:#6554AF;'>
      <h2>サイドバー</h2>
      <%= render 'public/users/sidebar', user: current_user %>
    </div>
<!--プロフィール欄-->
    <div class='col-md-8 offset-md-1 sticky-top', style='font-weight: bold; background:#E966A0;'>
      <div class="mt-3 text-right">
        <% if @user == current_user %>
          <%= link_to 'プロフィール編集', edit_user_path, class: 'btn btn-secondary' %>
        <% end %>
      </div>

    <div class="d-flex align-items-center">
      <%= image_tag @user.get_profile_image, size: '150x150', class: "mb-3 rounded-circle mr-3" %>
        <div class="ml-30">
          <h3><%= @user.user_name %></h3>
          <p><%= @user.account_id %></p>
          <p><%= @user.introduction %></p>
          <p><%= @user.created_at.strftime('%Y/%m/%d') %></p>
        </div>
    </div>

    <table class='table'>
      <tr>
  	    <th>follows</th>
  	      <th>
      	    <%= link_to user_followings_path(@user) do%>
      	    <%= @user.followings.count %>
          </th>
  	        <% end %>
  	    <th>followers</th>
          <th>
            <%= link_to user_followers_path(@user) do%>
            <%= @user.followers.count %>
          </th>
            <% end %>
<!--フォローボタン❤︎-->
            <td><%= render "public/relationships/btn", user: @user, options: { class: "follow-link" } %></td>
      </tr>

    </table>

    </div>

    <div class='col-md-8 offset-md-1'>
      <%= render 'public/posts/index', posts: @posts, user: @user %>
    </div>
  </div>
</div>

